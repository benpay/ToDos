@model ToDoModel;
@{
    ViewData["Title"] = "UpdateToDo";
    ToDoModel todo = TempData["todoTemp"] as ToDoModel;
}

<h1>Update ToDo</h1>

<form action="/home/updatetodofinal" method="post">
    <input type="hidden" asp-for="Id" value="@todo.Id" />
    <div class="form-group">
        <label>Name</label>
        <input type="text" asp-for="Name" value="@todo.Name" />
        <label>Description</label>
        <input type="text" asp-for="Description" value="@todo.Description" />
        <label>Category</label>
        <input type="text" asp-for="CategoryName" value="@todo.CategoryName" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
